<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title><%= title %> Â· Jet Finances</title>
    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="/public/css/custom.css" rel="stylesheet">
    
    <style>
      /* Critical styles to override Bootstrap */
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif !important;
        background-color: hsl(210, 11%, 98%) !important;
        margin: 0 !important;
        padding: 0 !important;
      }
      
      .app-layout {
        display: flex !important;
        min-height: 100vh !important;
      }
      
      .sidebar {
        width: 256px !important;
        background-color: hsl(0, 0%, 100%) !important;
        border-right: 1px solid hsl(210, 11%, 90%) !important;
        position: fixed !important;
        height: 100vh !important;
        overflow-y: auto !important;
        z-index: 1000 !important;
      }
      
      .main-content {
        flex: 1 !important;
        margin-left: 256px !important;
        display: flex !important;
        flex-direction: column !important;
      }
    </style>
    
    <!-- HTMX -->
    <script src="https://unpkg.com/htmx.org@1.9.12"></script>
    
    <meta name="csrf-token" content="<%= locals.csrfToken %>">
    <script>
      document.addEventListener('htmx:configRequest', (ev) => {
        const token = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
        ev.detail.headers['X-CSRF-Token'] = token;
      });
    </script>
  </head>
  <body>
    <div class="app-layout">
      <!-- Sidebar -->
      <aside class="sidebar">
        <!-- Logo -->
        <div class="sidebar-header">
          <div class="logo-container">
            <div class="logo-icon">J</div>
            <span class="logo-text">Jet Finances</span>
          </div>
        </div>

        <!-- Navigation -->
        <nav class="sidebar-nav">
          <!-- GENERAL Section -->
          <div class="nav-section">
            <h3 class="nav-section-title">GENERAL</h3>
            <ul class="nav-list">
              <li class="nav-item">
                <a href="/" class="nav-link <%= title === 'Dashboard' ? 'active' : '' %>">
                  <i class="bi bi-house-door"></i>
                  <span>Overview</span>
                </a>
              </li>
            </ul>
          </div>

          <!-- MANAGEMENT Section -->
          <div class="nav-section">
            <h3 class="nav-section-title">MANAGEMENT</h3>
            <ul class="nav-list">
              <li class="nav-item">
                <a href="/invoices" class="nav-link <%= title === 'Invoices' ? 'active' : '' %>">
                  <i class="bi bi-file-text"></i>
                  <span>Invoices</span>
                </a>
              </li>
              <li class="nav-item">
                <a href="/flights" class="nav-link <%= title === 'Flights' ? 'active' : '' %>">
                  <i class="bi bi-airplane"></i>
                  <span>Flights</span>
                </a>
              </li>
              <li class="nav-item">
                <a href="/reports" class="nav-link <%= title === 'Reports' ? 'active' : '' %>">
                  <i class="bi bi-bar-chart"></i>
                  <span>Reports</span>
                </a>
              </li>
              <li class="nav-item">
                <a href="/disputes" class="nav-link <%= title === 'Disputes' ? 'active' : '' %>">
                  <i class="bi bi-exclamation-triangle"></i>
                  <span>Disputes</span>
                </a>
              </li>
            </ul>
          </div>

          <!-- SUPPORT Section -->
          <div class="nav-section">
            <h3 class="nav-section-title">SUPPORT</h3>
            <ul class="nav-list">
              <li class="nav-item">
                <a href="/settings" class="nav-link <%= title === 'Settings' ? 'active' : '' %>">
                  <i class="bi bi-gear"></i>
                  <span>Settings</span>
                </a>
              </li>
            </ul>
          </div>
        </nav>

        <!-- User Section -->
        <div class="sidebar-footer">
          <div class="user-info">
            <div class="user-avatar">JF</div>
            <div class="user-details">
              <div class="user-name">John Doe</div>
              <div class="user-role">Admin</div>
            </div>
          </div>
        </div>
      </aside>

      <!-- Main Content -->
      <div class="main-content">
        <!-- Header -->
        <header class="header">
          <div class="header-left">
            <div class="search-container">
              <i class="bi bi-search search-icon"></i>
              <input type="text" class="search-input" placeholder="Search">
            </div>
          </div>
          
          <div class="header-right">
            <button class="header-btn">
              <i class="bi bi-envelope"></i>
            </button>
            <button class="header-btn notification-btn">
              <i class="bi bi-bell"></i>
              <span class="notification-badge"></span>
            </button>
            <button class="header-btn">
              <i class="bi bi-gear"></i>
            </button>
            <div class="user-profile">
              <div class="user-avatar-small">JF</div>
              <span class="user-name-small">John Doe</span>
            </div>
          </div>
        </header>

        <!-- Page Content -->
        <main class="page-content">
          <%- body %>
        </main>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>