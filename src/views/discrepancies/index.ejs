<!-- Discrepancies Table -->
<div class="table-container">
  <div class="table-card">
    <div class="table-header">
      <div class="table-title">
        <h3>Discrepancies Management</h3>
        <span class="table-subtitle">All claimed discrepancies or objections in issued invoices</span>
      </div>
      <div class="table-actions">
        <% if (user && user.role === 'superadmin') { %>
        <button class="btn btn-primary" id="addDiscrepancyBtn">
          <i class="bi bi-plus-lg"></i>
          Add Discrepancy
        </button>
        <% } else { %>
        <button class="btn btn-secondary" disabled title="Only superadmin can add discrepancies">
          <i class="bi bi-plus-lg"></i>
          Add Discrepancy
        </button>
        <% } %>
      </div>
    </div>
    
    <div class="table-wrapper">
      <table class="discrepancies-table">
        <thead>
          <tr>
            <th class="checkbox-col">
              <input type="checkbox" class="form-check-input" id="selectAll">
            </th>
            <th class="sortable" id="date-sort-header" data-sort="date">
              DATE
              <i class="bi bi-chevron-down sort-icon" id="date-sort-icon"></i>
            </th>
            <th class="sortable">
              INVOICE
              <i class="bi bi-chevron-down sort-icon"></i>
            </th>
            <th class="sortable">
              DESCRIPTION
              <i class="bi bi-chevron-down sort-icon"></i>
            </th>
            <th>CLAIMED AMOUNT</th>
            <th>STATUS</th>
            <th>SOLUTION</th>
            <th>ACTIONS</th>
          </tr>
        </thead>
        <tbody id="discrepancies-table-body">
          <!-- Data will be loaded via JavaScript -->
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Add Discrepancy Modal -->
<div id="addDiscrepancyModal" class="modal-overlay" style="display: none;">
  <div class="modal-container">
    <div class="modal-header">
      <h3 id="discrepancyModalTitle">Add New Discrepancy</h3>
      <button class="modal-close" id="closeDiscrepancyModalBtn">
        <i class="bi bi-x-lg"></i>
      </button>
    </div>
    
    <form id="addDiscrepancyForm" class="modal-form">
      <input type="hidden" id="discrepancyId" name="discrepancyId" value="">
      <div class="form-group">
        <label for="discrepancyDate">Date</label>
        <input type="date" id="discrepancyDate" name="created_at" required>
      </div>
      
      <div class="form-group">
        <label for="discrepancyInvoice">Invoice</label>
        <select id="discrepancyInvoice" name="invoice_id" required>
          <option value="">Select Invoice</option>
        </select>
      </div>
      
      <div class="form-group">
        <label for="discrepancyDescription">Description</label>
        <textarea id="discrepancyDescription" name="description" rows="4" placeholder="Enter description of the discrepancy..." required></textarea>
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <label for="discrepancyClaimedAmount">Claimed Amount</label>
          <input type="number" id="discrepancyClaimedAmount" name="claimed_amount" step="0.01" placeholder="0.00">
        </div>
        <div class="form-group">
          <label for="discrepancyClaimedCurrency">Currency</label>
          <select id="discrepancyClaimedCurrency" name="claimed_currency">
            <option value="">Select Currency</option>
            <option value="AED">AED</option>
            <option value="USD" selected>USD</option>
            <option value="EUR">EUR</option>
          </select>
        </div>
      </div>
      
      <div class="form-group">
        <label for="discrepancyStatus">Status</label>
        <select id="discrepancyStatus" name="status" required>
          <option value="Created">Created</option>
          <option value="Raised">Raised</option>
          <option value="Resolved">Resolved</option>
          <option value="Declined">Declined</option>
          <option value="Closed">Closed</option>
        </select>
      </div>
      
      <div class="form-group">
        <label for="discrepancySolution">Solution</label>
        <textarea id="discrepancySolution" name="solution" rows="3" placeholder="Enter solution (optional)"></textarea>
        <small class="form-text">Optional: Enter the solution or resolution</small>
      </div>
      
      <div class="modal-actions">
        <button type="button" class="btn btn-cancel" id="cancelDiscrepancyBtn">
          Cancel
        </button>
        <button type="submit" class="btn btn-save" id="saveDiscrepancyBtn">
          <span class="btn-text" id="saveDiscrepancyBtnText">Save</span>
          <span class="btn-spinner" style="display: none;">
            <i class="bi bi-arrow-clockwise"></i>
          </span>
        </button>
      </div>
    </form>
  </div>
</div>

<script>
// Global variable to track current sort order
let currentSortOrder = 'newest'; // 'newest' or 'oldest' - default: newest first
let invoicesList = []; // Store invoices for dropdown

// Load invoices for dropdown
async function loadInvoices() {
  try {
    const response = await apiRequest('/api/invoices');
    invoicesList = await response.json();
    
    const invoiceSelect = document.getElementById('discrepancyInvoice');
    invoiceSelect.innerHTML = '<option value="">Select Invoice</option>';
    
    invoicesList.forEach(invoice => {
      const option = document.createElement('option');
      option.value = invoice.id;
      option.textContent = `${invoice.inv_number} - ${new Date(invoice.inv_date).toLocaleDateString()}`;
      invoiceSelect.appendChild(option);
    });
  } catch (error) {
    console.error('Error loading invoices:', error);
  }
}

// Load discrepancies data from API
async function loadDiscrepancies() {
  try {
    const response = await apiRequest('/api/discrepancies');
    const discrepancies = await response.json();
    
    const tbody = document.getElementById('discrepancies-table-body');
    tbody.innerHTML = '';
    
    if (!discrepancies || discrepancies.length === 0) {
      tbody.innerHTML = `
        <tr>
          <td colspan="8" style="text-align: center; padding: 2rem; color: #6b7280;">
            <i class="bi bi-inbox" style="font-size: 2rem; margin-bottom: 1rem; display: block;"></i>
            No discrepancies found.
          </td>
        </tr>
      `;
      return;
    }
    
    // Sort discrepancies by date based on current sort order
    if (currentSortOrder === 'newest') {
      discrepancies.sort((a, b) => new Date(b.created_at) - new Date(a.created_at));
    } else {
      discrepancies.sort((a, b) => new Date(a.created_at) - new Date(b.created_at));
    }
    
    // Group discrepancies by month
    const groupedDiscrepancies = {};
    discrepancies.forEach(discrepancy => {
      const date = new Date(discrepancy.created_at);
      const monthKey = `${date.getFullYear()}-${date.getMonth()}`;
      
      if (!groupedDiscrepancies[monthKey]) {
        groupedDiscrepancies[monthKey] = {
          month: date.getMonth(),
          year: date.getFullYear(),
          discrepancies: []
        };
      }
      groupedDiscrepancies[monthKey].discrepancies.push(discrepancy);
    });
    
    // Sort months based on current sort order
    const sortedMonths = Object.keys(groupedDiscrepancies).sort((a, b) => {
      const [yearA, monthA] = a.split('-').map(Number);
      const [yearB, monthB] = b.split('-').map(Number);
      
      if (currentSortOrder === 'newest') {
        if (yearA !== yearB) {
          return yearB - yearA;
        }
        return monthB - monthA;
      } else {
        if (yearA !== yearB) {
          return yearA - yearB;
        }
        return monthA - monthB;
      }
    });
    
    sortedMonths.forEach(monthKey => {
      const monthData = groupedDiscrepancies[monthKey];
      
      // Add month separator
      const monthRow = document.createElement('tr');
      const monthName = new Date(monthData.year, monthData.month).toLocaleDateString('en-US', { 
        month: 'long', 
        year: 'numeric' 
      });
      monthRow.innerHTML = `
        <td colspan="8" class="month-separator">
          <div class="month-divider">
            <span class="month-label">${monthName}</span>
          </div>
        </td>
      `;
      tbody.appendChild(monthRow);
      
      // Add discrepancies for this month
      monthData.discrepancies.forEach(discrepancy => {
        const row = document.createElement('tr');
        
        // Format date
        const date = new Date(discrepancy.created_at);
        const formattedDate = date.toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'short', 
          day: 'numeric' 
        });
        
        // Get invoice info
        const invoice = discrepancy.invoices || null;
        const invoiceNumber = invoice ? invoice.inv_number : 'N/A';
        
        // Format description (display full text)
        const description = discrepancy.description || '';
        
        // Format solution (display full text)
        const solution = discrepancy.solution || '';
        
        // Get status class
        const statusClass = getStatusClass(discrepancy.status);
        
        row.innerHTML = `
          <td class="checkbox-col">
            <input type="checkbox" class="form-check-input">
          </td>
          <td>
            <div class="date-badge">${formattedDate}</div>
          </td>
          <td>
            <div class="invoice-number">${invoiceNumber}</div>
          </td>
          <td>
            <div class="description-info">
              <div class="description-main">${description}</div>
            </div>
          </td>
          <td>
            <div class="amount-info">
              ${discrepancy.claimed_amount && discrepancy.claimed_currency 
                ? `<div class="amount-main">${discrepancy.claimed_currency} ${parseFloat(discrepancy.claimed_amount).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}</div>`
                : '<div class="amount-main" style="color: #9ca3af;">—</div>'
              }
            </div>
          </td>
          <td>
            <div class="status-container">
              <span class="status-badge ${statusClass}">${discrepancy.status}</span>
            </div>
          </td>
          <td>
            <div class="solution-info">
              <div class="solution-main">${solution || '—'}</div>
            </div>
          </td>
          <td>
            <div class="action-buttons">
              <% if (user && user.role === 'superadmin') { %>
              <button class="btn-action" title="Edit" data-action="edit" data-id="${discrepancy.id}">
                <i class="bi bi-pencil"></i>
              </button>
              <button class="btn-action" title="Delete" data-action="delete" data-id="${discrepancy.id}">
                <i class="bi bi-trash"></i>
              </button>
              <% } else { %>
              <span class="text-muted" style="font-size: 0.75rem;">Read Only</span>
              <% } %>
            </div>
          </td>
        `;
        
        // Add event listeners for action buttons
        const actionButtons = row.querySelectorAll('.btn-action');
        actionButtons.forEach(button => {
          button.addEventListener('click', function(e) {
            e.stopPropagation();
            const action = this.getAttribute('data-action');
            const id = this.getAttribute('data-id');
            
            switch(action) {
              case 'edit':
                editDiscrepancy(id);
                break;
              case 'delete':
                deleteDiscrepancy(id);
                break;
            }
          });
        });
        
        tbody.appendChild(row);
      });
    });
  } catch (error) {
    console.error('Error loading discrepancies:', error);
    const tbody = document.getElementById('discrepancies-table-body');
    tbody.innerHTML = `
      <tr>
        <td colspan="8" style="text-align: center; padding: 2rem; color: #6b7280;">
          <i class="bi bi-exclamation-triangle" style="font-size: 2rem; margin-bottom: 1rem; display: block;"></i>
          Failed to load discrepancies. Please try again.
        </td>
      </tr>
    `;
  }
}

// Get status class for styling
function getStatusClass(status) {
  const statusMap = {
    'Created': 'status-created',
    'Raised': 'status-raised',
    'Resolved': 'status-resolved',
    'Declined': 'status-declined',
    'Closed': 'status-closed'
  };
  return statusMap[status] || 'status-created';
}

// Toggle date sorting
function toggleDateSort() {
  currentSortOrder = currentSortOrder === 'newest' ? 'oldest' : 'newest';
  
  const sortIcon = document.getElementById('date-sort-icon');
  if (currentSortOrder === 'newest') {
    sortIcon.className = 'bi bi-chevron-down sort-icon';
  } else {
    sortIcon.className = 'bi bi-chevron-up sort-icon';
  }
  
  loadDiscrepancies();
}

// Action functions
function editDiscrepancy(id) {
  openEditDiscrepancyModal(id);
}

async function deleteDiscrepancy(id) {
  const confirmed = confirm('Are you sure you want to delete this discrepancy? This action cannot be undone.');
  
  if (!confirmed) {
    return;
  }
  
  try {
    const response = await apiRequest(`/api/discrepancies/${id}`, {
      method: 'DELETE',
    });
    
    if (response.ok) {
      await loadDiscrepancies();
      console.log('Discrepancy deleted successfully');
    } else {
      const errorData = await response.json();
      throw new Error(errorData.error || 'Failed to delete discrepancy');
    }
  } catch (error) {
    console.error('Error deleting discrepancy:', error);
    alert('Failed to delete discrepancy: ' + error.message);
  }
}

// Modal functions
function openAddDiscrepancyModal() {
  const modal = document.getElementById('addDiscrepancyModal');
  if (modal) {
    modal.classList.add('show');
    document.body.style.overflow = 'hidden';
    
    document.getElementById('discrepancyModalTitle').textContent = 'Add New Discrepancy';
    document.getElementById('saveDiscrepancyBtnText').textContent = 'Save';
    document.getElementById('discrepancyId').value = '';
    
    const today = new Date().toISOString().split('T')[0];
    const dateInput = document.getElementById('discrepancyDate');
    if (dateInput) {
      dateInput.value = today;
    }
    
    // Set default status
    document.getElementById('discrepancyStatus').value = 'Created';
  }
}

async function openEditDiscrepancyModal(discrepancyId) {
  const modal = document.getElementById('addDiscrepancyModal');
  if (modal) {
    modal.classList.add('show');
    document.body.style.overflow = 'hidden';
    
    document.getElementById('discrepancyModalTitle').textContent = 'Edit Discrepancy';
    document.getElementById('saveDiscrepancyBtnText').textContent = 'Update';
    document.getElementById('discrepancyId').value = discrepancyId;
    
    try {
      const response = await fetch(`/api/discrepancies/${discrepancyId}`);
      if (response.ok) {
        const discrepancy = await response.json();
        
        // Format date for input
        const date = new Date(discrepancy.created_at);
        const formattedDate = date.toISOString().split('T')[0];
        
        document.getElementById('discrepancyDate').value = formattedDate;
        document.getElementById('discrepancyInvoice').value = discrepancy.invoice_id;
        document.getElementById('discrepancyDescription').value = discrepancy.description || '';
        document.getElementById('discrepancyClaimedAmount').value = discrepancy.claimed_amount || '';
        document.getElementById('discrepancyClaimedCurrency').value = discrepancy.claimed_currency || '';
        document.getElementById('discrepancyStatus').value = discrepancy.status || 'Created';
        document.getElementById('discrepancySolution').value = discrepancy.solution || '';
      } else {
        alert('Error loading discrepancy data');
        closeAddDiscrepancyModal();
      }
    } catch (error) {
      console.error('Error fetching discrepancy:', error);
      alert('Error loading discrepancy data');
      closeAddDiscrepancyModal();
    }
  }
}

function closeAddDiscrepancyModal() {
  const modal = document.getElementById('addDiscrepancyModal');
  modal.classList.remove('show');
  document.body.style.overflow = 'auto';
  
  document.getElementById('addDiscrepancyForm').reset();
}

// Load data when page loads
document.addEventListener('DOMContentLoaded', function() {
  loadInvoices();
  loadDiscrepancies();
  
  const addDiscrepancyBtn = document.getElementById('addDiscrepancyBtn');
  if (addDiscrepancyBtn) {
    addDiscrepancyBtn.addEventListener('click', openAddDiscrepancyModal);
  }
  
  const closeModalBtn = document.getElementById('closeDiscrepancyModalBtn');
  if (closeModalBtn) {
    closeModalBtn.addEventListener('click', closeAddDiscrepancyModal);
  }
  
  const cancelBtn = document.getElementById('cancelDiscrepancyBtn');
  if (cancelBtn) {
    cancelBtn.addEventListener('click', closeAddDiscrepancyModal);
  }
  
  const addDiscrepancyForm = document.getElementById('addDiscrepancyForm');
  if (addDiscrepancyForm) {
    addDiscrepancyForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const saveBtn = document.getElementById('saveDiscrepancyBtn');
      const btnText = saveBtn.querySelector('.btn-text');
      const btnSpinner = saveBtn.querySelector('.btn-spinner');
      
      btnText.style.display = 'none';
      btnSpinner.style.display = 'inline-block';
      saveBtn.disabled = true;
      
      try {
        const formData = new FormData(this);
        const discrepancyData = Object.fromEntries(formData.entries());
        
        const discrepancyId = document.getElementById('discrepancyId').value;
        const isEdit = discrepancyId && discrepancyId.trim() !== '';
        
        delete discrepancyData.discrepancyId;
        
        // Normalize empty strings to null for optional fields
        if (!discrepancyData.claimed_amount || discrepancyData.claimed_amount.trim() === '') {
          discrepancyData.claimed_amount = null;
        }
        if (!discrepancyData.claimed_currency || discrepancyData.claimed_currency.trim() === '') {
          discrepancyData.claimed_currency = null;
        }
        if (!discrepancyData.solution || discrepancyData.solution.trim() === '') {
          discrepancyData.solution = null;
        }
        
        const url = isEdit ? `/api/discrepancies/${discrepancyId}` : '/api/discrepancies';
        const method = isEdit ? 'PUT' : 'POST';
        
        const response = await fetch(url, {
          method: method,
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(discrepancyData)
        });
        
        if (response.ok) {
          closeAddDiscrepancyModal();
          await loadDiscrepancies();
          const action = isEdit ? 'updated' : 'added';
          console.log(`Discrepancy ${action} successfully`);
        } else {
          // Try to parse error response
          let errorMessage = `Failed to ${isEdit ? 'update' : 'add'} discrepancy`;
          try {
            const contentType = response.headers.get('content-type');
            if (contentType && contentType.includes('application/json')) {
              const errorData = await response.json();
              errorMessage = errorData.error || errorData.details || errorMessage;
              if (errorData.details && errorData.details !== errorData.error) {
                errorMessage += `: ${errorData.details}`;
              }
            } else {
              const text = await response.text();
              errorMessage = text || errorMessage;
            }
          } catch (parseError) {
            console.error('Error parsing error response:', parseError);
            errorMessage = `Server error (${response.status}): ${response.statusText}`;
          }
          throw new Error(errorMessage);
        }
      } catch (error) {
        console.error('Error processing discrepancy:', error);
        const action = document.getElementById('discrepancyId').value ? 'update' : 'add';
        const errorMsg = error.message || `Failed to ${action} discrepancy`;
        alert(`Failed to ${action} discrepancy: ${errorMsg}`);
      } finally {
        btnText.style.display = 'inline-block';
        btnSpinner.style.display = 'none';
        saveBtn.disabled = false;
      }
    });
  }
  
  const addDiscrepancyModal = document.getElementById('addDiscrepancyModal');
  if (addDiscrepancyModal) {
    addDiscrepancyModal.addEventListener('click', function(e) {
      if (e.target === this) {
        closeAddDiscrepancyModal();
      }
    });
  }
  
  const dateSortHeader = document.getElementById('date-sort-header');
  if (dateSortHeader) {
    dateSortHeader.addEventListener('click', toggleDateSort);
  }
});
</script>

