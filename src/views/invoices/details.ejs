  console.log('=== FILLING FORM ===');
  console.log('Expense data:', expenseData);
  
  try {
    // Fill basic text fields
    const expAmountField = document.getElementById('expAmount');
    if (expAmountField) {
      expAmountField.value = expenseData.exp_amount || '';
      console.log('Set expAmount:', expenseData.exp_amount);
    }
    
    const expCurrencyField = document.getElementById('expCurrency');
    if (expCurrencyField) {
      expCurrencyField.value = expenseData.exp_currency || 'AED';
      console.log('Set expCurrency:', expenseData.exp_currency);
    }
    
    const expPlaceField = document.getElementById('expPlace');
    if (expPlaceField) {
      expPlaceField.value = expenseData.exp_place || '';
      console.log('Set expPlace:', expenseData.exp_place);
    }
    
    const expFuelQtyField = document.getElementById('expFuelQuan');
    if (expFuelQtyField) {
      expFuelQtyField.value = expenseData.exp_fuel_quan || '';
      console.log('Set expFuelQuan:', expenseData.exp_fuel_quan);
    }
    
