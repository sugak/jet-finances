// Load flights for dropdown
async function loadFlightsForDropdown() {
  try {
    const response = await apiRequest('/api/flights');
    const flights = await response.json();
    
    const select = document.getElementById('expFlight');
    select.innerHTML = '<option value="">Select Flight (Optional)</option>';
    
    // Sort flights by date (newest first)
    const sortedFlights = flights.sort((a, b) => {
      const dateA = new Date(a.flt_date);
      const dateB = new Date(b.flt_date);
      return dateB - dateA; // Newest first
    });
    
    sortedFlights.forEach(flight => {
      const option = document.createElement('option');
      option.value = flight.id;
      
      // Format date for display
      const flightDate = new Date(flight.flt_date);
      const formattedDate = flightDate.toLocaleDateString('en-GB', {
        day: '2-digit',
        month: 'short',
        year: 'numeric'
      });
      
      option.textContent = `${flight.flt_number} - ${flight.flt_dep} to ${flight.flt_arr} (${formattedDate})`;
      select.appendChild(option);
    });
  } catch (error) {
    console.error('Error loading flights for dropdown:', error);
  }
}

// Modal functions
function openAddExpenseModal() {
  const modal = document.getElementById('addExpenseModal');
  if (modal) {
    modal.classList.add('show');
    // Set modal for adding new expense
    document.getElementById('expenseModalTitle').textContent = 'Add New Expense';
    document.getElementById('saveExpenseBtnText').textContent = 'Save';
    document.getElementById('expenseId').value = '';
    
    // Load dropdowns when modal opens
    loadExpenseTypes();
    loadInvoiceTypes();
    loadFlightsForDropdown();
  }
}

async function openEditExpenseModal(expenseData) {
  const modal = document.getElementById('addExpenseModal');
  if (modal) {
    modal.classList.add('show');
    // Set modal for editing expense
    document.getElementById('expenseModalTitle').textContent = 'Edit Expense';
    document.getElementById('saveExpenseBtnText').textContent = 'Update';
    document.getElementById('expenseId').value = expenseData.id;
    
    // Load dropdowns when modal opens and wait for them to complete
    await Promise.all([
      loadExpenseTypes(),
      loadInvoiceTypes(),
      loadFlightsForDropdown()
    ]);
    
    // Wait longer to ensure DOM is updated and dropdowns are fully populated
    await new Promise(resolve => setTimeout(resolve, 300));
    
    // Fill form with existing data after dropdowns are loaded
    await fillExpenseForm(expenseData);
  }
}

