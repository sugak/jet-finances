<h1>Dashboard</h1>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Welcome to Jet Finances</h5>
      </div>
      <div class="card-body">
        <p class="card-text">This is your financial dashboard. Here you can manage your transactions, invoices, and reports.</p>
        
        <div class="row mt-4">
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title">Total Balance</h5>
                <h3 class="text-success">$45,678</h3>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title">Monthly Income</h5>
                <h3 class="text-primary">$12,345</h3>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title">Monthly Expenses</h5>
                <h3 class="text-warning">$8,765</h3>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title">Net Profit</h5>
                <h3 class="text-info">$3,580</h3>
              </div>
            </div>
          </div>
        </div>
        
        <div class="mt-4">
          <h5>Quick Actions</h5>
          <div class="btn-group" role="group">
            <a href="/transactions" class="btn btn-primary">View Transactions</a>
            <a href="/invoices" class="btn btn-success">Manage Invoices</a>
            <a href="/reports" class="btn btn-info">Generate Reports</a>
          </div>
        </div>
        
        <div class="mt-4">
          <h5>System Status</h5>
          <p>Supabase Connection: <span class="badge bg-success">Connected</span></p>
          <button class="btn btn-sm btn-outline-primary" onclick="testConnection()">Test Connection</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function testConnection() {
  fetch('/api/health/supabase')
    .then(response => response.json())
    .then(data => {
      alert('Connection Status: ' + JSON.stringify(data, null, 2));
    })
    .catch(error => {
      alert('Connection Error: ' + error.message);
    });
}
</script>