<!-- Page Header -->
<div class="page-header">
  <div>
    <h1 class="page-title">Dashboard</h1>
    <p class="page-description">Welcome back! Here's what's happening with your finances.</p>
  </div>
</div>

<!-- Stats Grid -->
<div class="stats-grid">
  <div class="stat-card">
    <div class="stat-header">
      <h3 class="stat-title">Total Revenue</h3>
      <i class="bi bi-currency-dollar stat-icon"></i>
    </div>
    <div class="stat-content">
      <div class="stat-value">$2,456,890</div>
      <div class="stat-change positive">
        <i class="bi bi-arrow-up-right"></i>
        <span>+12.5%</span>
        <span class="stat-description">vs last month</span>
      </div>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-header">
      <h3 class="stat-title">Active Invoices</h3>
      <i class="bi bi-file-text stat-icon"></i>
    </div>
    <div class="stat-content">
      <div class="stat-value">1,248</div>
      <div class="stat-change positive">
        <i class="bi bi-arrow-up-right"></i>
        <span>+3.2%</span>
        <span class="stat-description">pending payments</span>
      </div>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-header">
      <h3 class="stat-title">Flight Bookings</h3>
      <i class="bi bi-airplane stat-icon"></i>
    </div>
    <div class="stat-content">
      <div class="stat-value">856</div>
      <div class="stat-change negative">
        <i class="bi bi-arrow-down-right"></i>
        <span>-2.1%</span>
        <span class="stat-description">this month</span>
      </div>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-header">
      <h3 class="stat-title">Open Disputes</h3>
      <i class="bi bi-exclamation-triangle stat-icon"></i>
    </div>
    <div class="stat-content">
      <div class="stat-value">23</div>
      <div class="stat-change positive">
        <i class="bi bi-arrow-up-right"></i>
        <span>-15.3%</span>
        <span class="stat-description">resolved this week</span>
      </div>
    </div>
  </div>
</div>

<!-- Charts and Activity Grid -->
<div class="content-grid">
  <!-- Revenue Chart -->
  <div class="chart-card">
    <div class="card-header">
      <h3 class="card-title">Revenue Overview</h3>
      <p class="card-description">Monthly revenue trends</p>
    </div>
    <div class="card-content">
      <div class="chart-placeholder">
        <i class="bi bi-bar-chart chart-icon"></i>
        <p class="chart-text">Chart placeholder - Revenue trends</p>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="activity-card">
    <div class="card-header">
      <h3 class="card-title">Recent Activity</h3>
      <p class="card-description">Latest transactions and updates</p>
    </div>
    <div class="card-content">
      <div class="activity-list">
        <div class="activity-item">
          <div class="activity-dot"></div>
          <div class="activity-content">
            <div class="activity-type">Invoice</div>
            <div class="activity-description">Payment received from Delta Airlines</div>
            <div class="activity-footer">
              <span class="activity-amount">$45,890</span>
              <span class="activity-time">2 hours ago</span>
            </div>
          </div>
        </div>

        <div class="activity-item">
          <div class="activity-dot"></div>
          <div class="activity-content">
            <div class="activity-type">Flight</div>
            <div class="activity-description">Flight JF-2024 booking confirmed</div>
            <div class="activity-footer">
              <span class="activity-amount">$12,450</span>
              <span class="activity-time">4 hours ago</span>
            </div>
          </div>
        </div>

        <div class="activity-item">
          <div class="activity-dot"></div>
          <div class="activity-content">
            <div class="activity-type">Dispute</div>
            <div class="activity-description">Dispute #1247 resolved</div>
            <div class="activity-footer">
              <span class="activity-amount">$8,920</span>
              <span class="activity-time">6 hours ago</span>
            </div>
          </div>
        </div>

        <div class="activity-item">
          <div class="activity-dot"></div>
          <div class="activity-content">
            <div class="activity-type">Invoice</div>
            <div class="activity-description">New invoice generated for United Airlines</div>
            <div class="activity-footer">
              <span class="activity-amount">$67,340</span>
              <span class="activity-time">8 hours ago</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Performance Indicators -->
<div class="performance-grid">
  <div class="performance-card">
    <div class="card-header">
      <h3 class="card-title">Payment Success Rate</h3>
      <p class="card-description">This month's performance</p>
    </div>
    <div class="card-content">
      <div class="performance-content">
        <div class="performance-label">
          <span class="performance-text">Success Rate</span>
          <span class="performance-value">94.2%</span>
        </div>
        <div class="progress-bar">
          <div class="progress-fill" style="width: 94.2%"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="performance-card">
    <div class="card-header">
      <h3 class="card-title">Processing Time</h3>
      <p class="card-description">Average transaction time</p>
    </div>
    <div class="card-content">
      <div class="performance-content">
        <div class="performance-label">
          <span class="performance-text">Avg. Time</span>
          <span class="performance-value">2.3 seconds</span>
        </div>
        <div class="progress-bar">
          <div class="progress-fill" style="width: 76%"></div>
        </div>
      </div>
    </div>
  </div>
</div>