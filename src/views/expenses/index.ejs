// Sort expenses by field
function sortExpenses(field) {
  // If clicking the same field, toggle sort order
  if (currentSortField === field) {
    currentSortOrder = currentSortOrder === 'asc' ? 'desc' : 'asc';
  } else {
    // New field, default to ascending
    currentSortField = field;
    currentSortOrder = 'asc';
  }
  
  // Update sort icons
  updateSortIcons();
  
  // Apply filters (which includes sorting)
  applyFilters();
}

// Update sort icons in table headers
function updateSortIcons() {
  // Remove all sort icons first
  document.querySelectorAll('.sort-icon').forEach(icon => {
    icon.className = 'bi bi-chevron-down sort-icon';
  });
  
  // Add active sort icon to current field
  const activeHeader = document.querySelector(`[data-sort-field="${currentSortField}"]`);
  if (activeHeader) {
    const icon = activeHeader.querySelector('.sort-icon');
    if (icon) {
      icon.className = `bi bi-chevron-${currentSortOrder === 'asc' ? 'up' : 'down'} sort-icon active`;
    }
  }
}

// Sort function for different data types
function sortExpensesByField(expenses, field, order) {
  return expenses.sort((a, b) => {
    let valueA = a[field];
    let valueB = b[field];
    
    // Handle null/undefined values
    if (valueA === null || valueA === undefined) valueA = '';
    if (valueB === null || valueB === undefined) valueB = '';
    
    // Special handling for different field types
    switch (field) {
      case 'created_at':
      case 'exp_period_start':
      case 'exp_period_end':
        // Date fields
        valueA = new Date(valueA);
        valueB = new Date(valueB);
        break;
      case 'exp_amount':
        // Numeric fields
        valueA = parseFloat(valueA) || 0;
        valueB = parseFloat(valueB) || 0;
        break;
      default:
        // String fields
        valueA = String(valueA).toLowerCase();
        valueB = String(valueB).toLowerCase();
    }
    
    // Compare values
    let comparison = 0;
    if (valueA > valueB) {
      comparison = 1;
    } else if (valueA < valueB) {
      comparison = -1;
    }
    
    // Apply sort order
    return order === 'asc' ? comparison : -comparison;
  });
}

