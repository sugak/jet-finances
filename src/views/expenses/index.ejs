  // Initialize sort icons
  updateSortIcons();
  
  // Add event listeners for modal buttons
  const addExpenseBtn = document.getElementById('addExpenseBtn');
  if (addExpenseBtn) {
    addExpenseBtn.addEventListener('click', openAddExpenseModal);
  }
  
  // Add event listeners for filters
  const filterType = document.getElementById('filterType');
  if (filterType) {
    filterType.addEventListener('change', function() {
      loadSubtypesForFilter();
      applyFilters();
    });
  }
  
  const filterSubtype = document.getElementById('filterSubtype');
  if (filterSubtype) {
    filterSubtype.addEventListener('change', applyFilters);
  }
  
  const filterPlace = document.getElementById('filterPlace');
  if (filterPlace) {
    filterPlace.addEventListener('input', applyFilters);
  }
  
  const filterInvType = document.getElementById('filterInvType');
  if (filterInvType) {
    filterInvType.addEventListener('change', applyFilters);
  }
  
  const filterPeriodStart = document.getElementById('filterPeriodStart');
  if (filterPeriodStart) {
    filterPeriodStart.addEventListener('change', applyFilters);
  }
  
  const filterPeriodEnd = document.getElementById('filterPeriodEnd');
  if (filterPeriodEnd) {
    filterPeriodEnd.addEventListener('change', applyFilters);
  }
  
  const clearFiltersBtn = document.getElementById('clearFiltersBtn');
  if (clearFiltersBtn) {
    clearFiltersBtn.addEventListener('click', clearAllFilters);
  }
  
  // Expense type change handler
  const expTypeSelect = document.getElementById('expType');
  if (expTypeSelect) {
    expTypeSelect.addEventListener('change', function() {
      loadExpenseSubtypes(this.value);
    });
  }
  
  const closeModalBtn = document.getElementById('closeExpenseModalBtn');
  if (closeModalBtn) {
    closeModalBtn.addEventListener('click', closeAddExpenseModal);
  }
  
  const cancelBtn = document.getElementById('cancelExpenseBtn');
  if (cancelBtn) {
    cancelBtn.addEventListener('click', closeAddExpenseModal);
  }
  
  // Handle form submission
  const addExpenseForm = document.getElementById('addExpenseForm');
  if (addExpenseForm) {
    addExpenseForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const saveBtn = document.getElementById('saveExpenseBtn');
      const btnText = saveBtn.querySelector('.btn-text');
      const btnSpinner = saveBtn.querySelector('.btn-spinner');
      
      // Show spinner
      btnText.style.display = 'none';
      btnSpinner.classList.add('show');
      saveBtn.disabled = true;
      
      try {
        const formData = new FormData(addExpenseForm);
        const data = Object.fromEntries(formData.entries());
        
        // Check if disbursement fee should be included
        const includeDisbursementFee = data.include_disbursement_fee === 'on';
        delete data.include_disbursement_fee; // Remove checkbox from data
        
        // Currency field is now stored in database, so keep it
        
        // Convert empty strings to null for optional fields
        Object.keys(data).forEach(key => {
          if (data[key] === '') {
            data[key] = null;
          }
        });
        
        // Create main expense
        const response = await apiRequest('/api/expenses', {
          method: 'POST',
          body: JSON.stringify(data),
        });
        
        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.error || 'Failed to add expense');
        }
        
        // If disbursement fee should be included, create second expense
        if (includeDisbursementFee && data.exp_amount) {
          // Get expense type and subtype names for comment
          const expTypeSelect = document.getElementById('expType');
          const expSubtypeSelect = document.getElementById('expSubtype');
          const typeName = expTypeSelect.options[expTypeSelect.selectedIndex]?.textContent || '';
          const subtypeName = expSubtypeSelect.options[expSubtypeSelect.selectedIndex]?.textContent || '';
          
          // Calculate disbursement fee amount (5% of expense amount)
          const disbursementAmount = parseFloat(data.exp_amount) * 0.05;
          
          // Build comment
          let comment = `${typeName}`;
          if (subtypeName && subtypeName !== 'Select Subtype') {
            comment += ` - ${subtypeName}`;
          }
          comment += `, ${data.exp_amount} ${data.exp_currency || 'AED'}`;
          
          // Add period or flight info
          if (data.exp_period_start && data.exp_period_end) {
            comment += `, ${data.exp_period_start} - ${data.exp_period_end}`;
          } else if (data.exp_flight) {
            const flightSelect = document.getElementById('expFlight');
            const flightText = flightSelect.options[flightSelect.selectedIndex]?.textContent || '';
            if (flightText && flightText !== 'Select Flight (Optional)') {
              comment += `, ${flightText}`;
            }
          }
          
          // Find Disbursement fee type and subtype IDs
          const expenseTypesResponse = await apiRequest('/api/expense-types');
          const expenseTypes = await expenseTypesResponse.json();
          const disbursementType = expenseTypes.find(type => 
            type.name.toLowerCase().includes('disbursement')
          );
          
          if (disbursementType) {
            const subtypesResponse = await fetch(`/api/expense-subtypes/${disbursementType.id}`);
            const subtypes = await subtypesResponse.json();
            const disbursementSubtype = subtypes.find(subtype => 
              subtype.name.toLowerCase().includes('disbursement')
            );
            
            // Find Disbursement fee invoice type
            const invoiceTypesResponse = await apiRequest('/api/invoice-types');
            const invoiceTypes = await invoiceTypesResponse.json();
            const disbursementInvoiceType = invoiceTypes.find(type => 
              type.name.toLowerCase().includes('disbursement')
            );
            
            // Create disbursement fee expense
            const disbursementData = {
              exp_type: disbursementType.id,
              exp_subtype: disbursementSubtype ? disbursementSubtype.id : null,
              exp_invoice_type: disbursementInvoiceType ? disbursementInvoiceType.id : null,
              exp_amount: disbursementAmount.toFixed(2),
              exp_currency: data.exp_currency || 'AED',
              exp_invoice: data.exp_invoice,
              exp_flight: data.exp_flight,
              exp_period_start: data.exp_period_start,
              exp_period_end: data.exp_period_end,
              exp_place: data.exp_place,
              exp_comments: comment
            };
            
            // Convert empty strings to null
            Object.keys(disbursementData).forEach(key => {
              if (disbursementData[key] === '') {
                disbursementData[key] = null;
              }
            });
            
            await apiRequest('/api/expenses', {
              method: 'POST',
              body: JSON.stringify(disbursementData),
            });
          }
        }
        
        // Close modal and reload expenses
        closeAddExpenseModal();
        await loadExpenses();
        console.log('Expense added successfully');
      } catch (error) {
        console.error('Error adding expense:', error);
        alert('Failed to add expense: ' + error.message);
      } finally {
        // Hide spinner
        btnText.style.display = 'inline';
        btnSpinner.classList.remove('show');
        saveBtn.disabled = false;
      }
    });
  }
  
  // Close modal when clicking outside
  const addExpenseModal = document.getElementById('addExpenseModal');
  if (addExpenseModal) {
    addExpenseModal.addEventListener('click', function(e) {
      if (e.target === this) {
        closeAddExpenseModal();
      }
    });
  }
});
