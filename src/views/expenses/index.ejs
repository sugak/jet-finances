<script>
// Global variable to store all expenses for filtering
let allExpenses = [];

// Global sorting state
let currentSortField = 'created_at';
let currentSortOrder = 'desc';

// Load expenses data from API
async function loadExpenses() {
  try {
    console.log('Loading expenses...');
    const response = await apiRequest('/api/expenses');
    console.log('Response status:', response.status);
    const expenses = await response.json();
    console.log('Expenses loaded:', expenses.length);
    console.log('Expenses data:', expenses);
    
    if (!Array.isArray(expenses)) {
      throw new Error('Expenses data is not an array');
    }
    
    // Store all expenses globally for filtering
    allExpenses = expenses;
    
    // Sort expenses by creation date (newest first)
    expenses.sort((a, b) => {
      const dateA = new Date(a.created_at);
      const dateB = new Date(b.created_at);
      return dateB - dateA; // Descending order (newest first)
    });
    
    // Apply current filters
    applyFilters();
  } catch (error) {
    console.error('Error loading expenses:', error);
    console.error('Error details:', error.message, error.stack);
    // Show error message
    const tbody = document.getElementById('expenses-table-body');
    tbody.innerHTML = `
      <tr>
        <td colspan="12" style="text-align: center; padding: 2rem; color: #6b7280;">
          <i class="bi bi-exclamation-triangle" style="font-size: 2rem; margin-bottom: 1rem; display: block;"></i>
          Failed to load expenses. Please try again.
          <br><small>Error: ${error.message}</small>
        </td>
      </tr>
    `;
  }
}

// Apply filters to expenses and render table
function applyFilters() {
  const tbody = document.getElementById('expenses-table-body');
  if (!tbody) return;
  
  // Get filter values
  const typeFilter = document.getElementById('filterType')?.value || '';
  const subtypeFilter = document.getElementById('filterSubtype')?.value || '';
  const placeFilter = document.getElementById('filterPlace')?.value.toLowerCase() || '';
  const invTypeFilter = document.getElementById('filterInvType')?.value || '';
  const periodStartFilter = document.getElementById('filterPeriodStart')?.value || '';
  const periodEndFilter = document.getElementById('filterPeriodEnd')?.value || '';
  
  // Filter expenses
  let filteredExpenses = allExpenses.filter(expense => {
    // Type filter
    if (typeFilter && expense.exp_type !== typeFilter) return false;
    
    // Subtype filter
    if (subtypeFilter && expense.exp_subtype !== subtypeFilter) return false;
    
    // Place filter (case-insensitive search)
    if (placeFilter && (!expense.exp_place || !expense.exp_place.toLowerCase().includes(placeFilter))) return false;
    
    // Invoice type filter
    if (invTypeFilter && expense.exp_invoice_type !== invTypeFilter) return false;
    
    // Period filters
    if (periodStartFilter && expense.exp_period_start && expense.exp_period_start < periodStartFilter + '-01') return false;
    if (periodEndFilter && expense.exp_period_end && expense.exp_period_end > periodEndFilter + '-01') return false;
    
    return true;
  });
  
  // Sort filtered expenses by current sort field and order
  filteredExpenses = sortExpensesByField(filteredExpenses, currentSortField, currentSortOrder);
  
  // Clear table
  tbody.innerHTML = '';
  
  // Render filtered expenses
  filteredExpenses.forEach(expense => {
      const row = document.createElement('tr');
      
      // Format amount without currency symbol (currency is shown in separate column)
      const formattedAmount = expense.exp_amount ? parseFloat(expense.exp_amount).toLocaleString('en-US', { 
        minimumFractionDigits: 2, 
        maximumFractionDigits: 2 
      }) : 'N/A';
      
      
      // Format fuel quantity
      const fuelQuantity = expense.exp_fuel_quan ? `${expense.exp_fuel_quan} L` : 'N/A';
      
      // Format fuel provider
      const fuelProvider = expense.exp_fuel_provider || 'N/A';
      
      row.innerHTML = `
        <td class="checkbox-col">
          <input type="checkbox" class="form-check-input">
        </td>
        <td>
          <div class="expense-type-compact">${expense.exp_type || 'N/A'}</div>
        </td>
        <td>
          <div class="expense-subtype-compact">${expense.exp_subtype || 'N/A'}</div>
        </td>
        <td>
          <div class="expense-place-compact">${expense.exp_place || 'N/A'}</div>
        </td>
        <td>
          <div class="amount-compact">${formattedAmount}</div>
        </td>
        <td>
          <div class="currency-compact">${expense.exp_currency || 'N/A'}</div>
        </td>
        <td>
          <div class="period-compact">${formatPeriod(expense.exp_period_start, expense.exp_period_end)}</div>
        </td>
        <td>
          <div class="fuel-quantity-compact">${fuelQuantity}</div>
        </td>
        <td>
          <div class="fuel-provider-compact">${fuelProvider}</div>
        </td>
        <td>
          <div class="invoice-type-compact">${expense.exp_invoice_type || 'N/A'}</div>
        </td>
        <td>
          <div class="invoice-number-compact">${expense.invoices?.inv_number || 'N/A'}</div>
        </td>
        <td>
          <div class="flight-number-compact">
            ${expense.flights?.flt_number || 'N/A'}
            ${expense.flights?.flt_dep && expense.flights?.flt_arr ? ` (${expense.flights.flt_dep} - ${expense.flights.flt_arr})` : ''}
          </div>
        </td>
        <td>
          <div class="action-buttons">
            <button class="btn-action" title="View Details" onclick="viewExpense('${expense.id}')">
              <i class="bi bi-eye"></i>
            </button>
            <% if (user && user.role === 'superadmin') { %>
            <button class="btn-action" title="Edit" onclick="editExpense('${expense.id}')">
              <i class="bi bi-pencil"></i>
            </button>
            <button class="btn-action" title="Delete" onclick="deleteExpense('${expense.id}')">
              <i class="bi bi-trash"></i>
            </button>
            <% } else { %>
            <span class="text-muted" style="font-size: 0.75rem;">Read Only</span>
            <% } %>
          </div>
        </td>
      `;
      
      tbody.appendChild(row);
    });
}

// Format period display
function formatPeriod(startDate, endDate) {
  if (!startDate || !endDate) {
    return 'N/A';
  }
  
  const start = new Date(startDate);
  const end = new Date(endDate);
  
  // Format start date
  const startFormatted = start.toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'short' 
  });
  
  // Format end date
  const endFormatted = end.toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'short' 
  });
  
  // Check if it's a single month
  const startMonth = start.getMonth();
  const endMonth = end.getMonth();
  const startYear = start.getFullYear();
  const endYear = end.getFullYear();
  
  // If end is the next month after start, it's a single month
  if (endYear === startYear && endMonth === (startMonth + 1) % 12) {
    return startFormatted;
  }
  
  // If end is January of next year and start is December, it's a single month
  if (endYear === startYear + 1 && endMonth === 0 && startMonth === 11) {
    return startFormatted;
  }
  
  // Otherwise, show range
  return `${startFormatted} - ${endFormatted}`;
}

